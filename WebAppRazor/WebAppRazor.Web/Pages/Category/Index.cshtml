@page
@model CategoryIndexModel

@{
    Layout = "Shared/_Layout";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h1>Category Index</h1>
            <table class="table table-responsive table-striped">
                <thead>
                <tr>
                    <td>Code</td>
                    <td>Name</td>
                    <td>#</td>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Categories)
                {
                    <tr>
                        <td>@item.Code</td>
                        <td>@item.Name</td>
                        <td></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>