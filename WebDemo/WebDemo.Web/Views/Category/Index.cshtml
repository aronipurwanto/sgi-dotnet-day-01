@model IEnumerable<CategoryModel>
@{
    ViewBag.Title = "Title";
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h2>Category Index</h2>
        </div>
        <div class="col">
            <a asp-controller="Category" asp-action="Add" class="btn btn-primary">New Category</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-striped table-responsive">
                <thead>
                <tr>
                    <td>Id</td>
                    <td>Code</td>
                    <td>Name</td>
                    <td>#</td>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Code</td>
                        <td>@item.Name</td>
                        <td>

                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>