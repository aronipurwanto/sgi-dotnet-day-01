@model CategoryModel

@{
    ViewBag.Title = "Category - Detail";
    Layout = "_Layout";
}
<div class="container">
    <div class="row">
        <div class="col">
            <h2>Category Detail</h2>
            <table class="table">
                <tr>
                    <th>ID</th>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <th>Code</th>
                    <td>@Model.Code</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th colspan="2">Products : </th>
                </tr>
                @foreach (var item in Model.products)
                {
                    <tr>
                        <td>@item.Code</td>
                        <td>@item.Name</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
